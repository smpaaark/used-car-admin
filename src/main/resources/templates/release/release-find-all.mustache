{{>layout/header}}

<body>
<div class="container">
    {{>layout/bodyHeader}}
    <h1>🧾차량 출고 목록</h1>
    <form class="form-inline">
        <div class="form-group mb-2">
            <input type="text" class="form-control" placeholder="차종" id="release-search-model">
        </div>
        <div class="form-group mx-sm-1 mb-2">
            <select class="form-control" id="release-search-status">
                <option value="">출고 상태</option>
                <option value="READY" class="font-green">입금 대기</option>
                <option value="COMPLETE" class="font-blue">출고 완료</option>
                <option value="CANCEL" class="font-red">출고 취소</option>
            </select>
        </div>
    </form>
    <form class="form-inline">
        <div class="form-group mb-2">
            <input type="date" class="form-control" placeholder="시작 일자" id="release-search-startDate">
        </div>
        <div class="form-group mb-2 mx-sm-1">
            <input type="date" class="form-control" placeholder="종료 일자" id="release-search-endDate">
        </div>
        <button type="button" class="btn btn-primary mb-2" id="btn-release-search">검색</button>
    </form>
    <div>
        <table class="table table-striped">
            <thead> <tr>
                <th>#</th>
                <th>차종</th>
                <th>색상</th>
                <th>차량 번호</th>
                <th>출고 일자</th>
                <th>출고 상태</th>
            </tr>
            </thead>
            <tbody id="release-find-all-tbody">
            {{#releaseList}}
                <tr>
                        <td>{{id}}</td>
                        <td><a href="/release/find/{{id}}">{{car.model}}</a></td>
                        <td>{{car.color}}</td>
                        <td>{{car.carNumber}}</td>
                        <td>{{formattedReleaseDate}}</td>
                        {{#isStatusReady}}
                            <td class="font-green">{{statusString}}</td>
                        {{/isStatusReady}}
                        {{#isStatusComplete}}
                            <td class="font-blue">{{statusString}}</td>
                        {{/isStatusComplete}}
                        {{#isStatusCancel}}
                            <td class="font-red">{{statusString}}</td>
                        {{/isStatusCancel}}
                </tr>
            {{/releaseList}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}